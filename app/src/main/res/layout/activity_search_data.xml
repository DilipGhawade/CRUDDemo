<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FA8072"
    tools:context="com.meteorsoftech.cruddemo.SearchData">


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtsearch"
        android:hint="Username"
        android:layout_above="@+id/txt_mobileno"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_search"
        android:text="Search"
        android:textSize="15dp"
        android:onClick="serchContact"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/edtsearch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_search"
        android:text="Mobile no"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_mobileno"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_mobileno"
        android:layout_marginTop="10dp"
        android:text="Email ID"
        android:textSize="15sp"
        android:id="@+id/txt_emailid"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_emailid"
        android:layout_marginTop="10dp"
        android:text="Address"
        android:id="@+id/txt_addresss"
        />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_addresss"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"
        android:text="Delete"
        android:onClick="deletedata"/>

</RelativeLayout>
