<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FA8072"
    tools:context="com.meteorsoftech.cruddemo.UpdateInfo">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtx_search"
        android:hint="UserName"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/edtx_search"
        android:id="@+id/button_search"
        android:layout_marginTop="20dp"
        android:text="Search"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="#CD5C5C"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtx_mob"
        android:layout_below="@+id/edtx_search"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtx_mob"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/edtx_email"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtx_email"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/edtx_address"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_below="@id/edtx_address"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:background="#CD5C5C"
        android:textSize="20dp"

        />


</RelativeLayout>
